#!/bin/bash
# SPDX-License-Identifier: GPL-2.0-only
pkg=$1
rev=${2:-latest}
srcprj=openSUSE:Factory
dstprj=openSUSE:Slowroll:Staging

if [ -z "$pkg" ] ; then
    echo "Usage: $0 PKG"
    echo "submits a package named PKG from Tumbleweed to Slowroll"
    exit 1
fi

if [ $rev = latest ] ; then
    rev=$(osc log $srcprj "$pkg" |
        head -2 |tail -1 |
	cut -d" " -f1 | cut -c2-)
fi

# find out if it has any diff:
if PAGER="wc -c" osc rdiff --missingok -r $rev $srcprj "$pkg" $dstprj | grep -q . ; then
    vrev=`osc ls -b $srcprj "$pkg" standard x86_64 | perl -ne 'm/-([0-9]+\.[0-9]+)\.src\.rpm$/ && print $1'`
    echo "submitting $pkg $vrev ..."
    osc branch -f -r $rev --nodevelproject $srcprj "$pkg" $dstprj
    if [[ -n "$vrev" ]] ; then
        osc setlinkrev --vrev "$vrev.0" -r $rev $dstprj "$pkg"
    fi
    #osc detachbranch -m "drop link" $dstprj "$pkg"
    touch out/pending/$pkg
else
    echo "no diff"
fi
